exclude_paths:
  - collections/
  - collections/ansible_collections/
  - collections/ansible_collections/community/
  - collections/ansible_collections/ansible/

roles_path:
  - roles

skip_list:
  - risky-shell-pipe # avoid false positives for controlled shell usage
  - var-naming[no-role-prefix] # roles use shared vars by design
  - role-name[path] # keep existing role layout